# Configurações do Servidor
PORT=3000
NODE_ENV=development

# Configurações do Banco de Dados
DATABASE_URL=mongodb://localhost:27017/whatsapp-crm

# Configurações de Segurança
JWT_SECRET=seu_jwt_secret_aqui
JWT_EXPIRES_IN=30d

# Configurações do WhatsApp
WHATSAPP_API_KEY=sua_chave_api_aqui
WHATSAPP_WEBHOOK_URL=https://seu-dominio.com/webhook

# Configurações de E-mail
SMTP_HOST=smtp.exemplo.com
SMTP_PORT=587
SMTP_USER=seu_email@exemplo.com
SMTP_PASS=sua_senha_aqui
SMTP_FROM='WhatsApp CRM <contato@seu-dominio.com>'

# Configurações de Upload
MAX_FILE_UPLOAD=10
FILE_UPLOAD_PATH=./uploads

# Configurações de Limite de Taxa
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
